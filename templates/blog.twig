{% extends "base.twig" %}

{% block content %}
<div class="container">
    <div class="row">
        <!-- Main Content -->
        <div class="col-md-8">
            {% block blog_content %}
                {% for post in posts|default([]) %}
                    <article class="blog-post">
                        <h2>{{ post.title }}</h2>
                        <div class="metadata">
                            <span>{{ post.date|date('F j, Y') }}</span>
                            <span>By {{ post.author }}</span>
                        </div>
                        <div class="content">
                            {{ post.content|raw }}
                        </div>
                    </article>
                {% endfor %}
            {% endblock %}
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            {% block sidebar %}
                <div class="sidebar">
                    <!-- Categories -->
                    <div class="widget">
                        <h3>Categories</h3>
                        <ul>
                            {% for category in categories|default([]) %}
                                <li><a href="{{ category.url }}">{{ category.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>

                    <!-- Recent Posts -->
                    <div class="widget">
                        <h3>Recent Posts</h3>
                        <ul>
                            {% for post in recent_posts|default([]) %}
                                <li><a href="{{ post.url }}">{{ post.title }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
</div>
{% endblock %} 